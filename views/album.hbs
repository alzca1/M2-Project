<section class="album-page">

  <a class="go-back" href="javascript: history.go(-1);location.replace(document.referrer)">
    <img src="../images/arrow-left-color.png">
  </a>
  
  <div class="big-image">
    <img src="{{albumData.images.[0].url}}" alt="{{albumData.name}}">
  </div>
   
  <form action="/album/{{albumData.id}}/addAlbum" method="POST" class="like">
    <button class="btn-add" type="submit">
      <img src="../images/heart.png" alt="like icon">
    </button>
  </form>

  <section class="list-info-section">
    <h1 class="name">{{albumData.name}}</h1>
    <p class="date">{{albumData.release_date}}</p>

    {{#each myTracks}}
      <article class="list-elements">
        <div class="info-wrapper">
          <h2>{{this.name}}</h2>
          {{!-- <p>{{this.release_date}} Â· {{this.artists.0.name}}</p> --}}
        </div>
        <audio controls name="media">
          <source src="{{this.preview_url}}" type="audio/mpeg">
        </audio>
        <a href="#0" class="add-button">
          <img src="../images/add.png" alt="add icon">
        </a>
        {{!-- <ul>
          {{!-- <li>
            <form action="/album/{{this.id}}/like/{{this.albumId}}" method="POST">
              <button class="btn-like" type="submit">Like</button>
            </form>
          </li> --}}
          {{!-- <li> <a href="#0" class="add-button">add</a></li> --}}
        {{!-- </ul> --}}
          {{#each this.myPlaylist}}
              <form action="/album/{{this.id}}/add/{{this.albumId}}/to/{{../id}}/from/{{../artists.0.id}}" method="POST">
                <button class="btn-add" type="submit">add song</button>
              </form>
            </li>
          {{/each}}
      </article>
    {{/each}}
  </section>
</section>



