<form action="/auth/signup" method="POST" enctype="multipart/form-data">

{{#if formData.length}}
  {{#each formData}}
    <label for="username">Username</label>
    <input type="text" name="username" id="username" required placeholder="Username" value="{{this.username}}"> 
    <label for="email">Email</label>
    <input type="text" name="email" id="email" required placeholder="email" value="{{this.email}}"> 
    <label for="password">Password</label>
    <input type="password" name="password" id="password" required placeholder="Password">
    <label for="location">Location</label>
    <input type="text" name="location" id="location" required placeholder="Location" value="{{this.location}}"> 
    <label for="picture">Username</label>
    <input type="file" name="picture" id="picture" > 
  {{/each}}
{{else}}
  <label for="username">Username</label>
  <input type="text" name="username" id="username" required placeholder="Username"> 
  <label for="email">Email</label>
  <input type="text" name="email" id="email" required placeholder="email"> 
  <label for="password">Password</label>
  <input type="password" name="password" id="password" required placeholder="Password">
  <label for="location">Location</label>
  <input type="text" name="location" id="location" required placeholder="Location"> 
    <label for="picture">Username</label>
    <input type="file" name="picture" id="picture" > 
{{/if}}

<button type="submit">Sign Up</button>

</form>

{{#if passwordformat.length}}
<p class="validation">
  {{#each passwordformat}}{{this}}{{/each}}
</p>
{{/if}}

{{#if usernameExistent.length}}
<p class="validation">
  {{#each usernameExistent}}{{this}}{{/each}}
</p>
{{/if}}

{{#if emailformat.length}}
<p class="validation">
  {{#each emailformat}}{{this}}{{/each}}
</p>
{{/if}}

{{#if emailExistent.length}}
<p class="validation">
  {{#each emailExistent}}{{this}}{{/each}}
</p>
{{/if}}


